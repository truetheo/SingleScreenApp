<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="infoDesc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorMinor</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:padding">@dimen/descInfo</item>
        <item name="android:background">@color/colorBackground2</item>
    </style>
    <style name="barTitle" parent="infoDesc">
        <item name="android:textSize">@dimen/titleSize</item>
        <item name="android:background">@color/colorBackgronud1</item>
        <item name="android:textColor">@color/colorMinor</item>
        <item name="android:paddingTop">@dimen/barName</item>
        <item name="android:paddingLeft">@dimen/barName</item>
        <item name="android:paddingRight">@dimen/barName</item>
        <item name="android:paddingBottom">@dimen/barName</item>
    </style>
    <style name="WindowTitleBackground">
        <item name="android:background">@color/colorBackground2</item>
    </style>
</resources>
